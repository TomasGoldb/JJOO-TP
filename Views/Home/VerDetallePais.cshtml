@{
    ViewData["Title"] = "Ver Detalle Pais";
}

<section class="detallePais">
    <h1>@ViewBag.pais.Nombre</h1>
    <p>Fecha de fundaci√≥n: @ViewBag.pais.FechaFundacion.ToShortDateString()</p>
    <img src=@ViewBag.pais.Bandera>
    <h1 class="tituloDeportistas">Deportistas</h1>
    <div class="container text-center">
        @{
            int repeticiones = ViewBag.listaDeportistasPais.Count;
            for(int i = 0; i < repeticiones; i += 4)
            {
                if(i < repeticiones && i + 1 >= repeticiones)
                {
                    <div class="row">
                        <div class="col columna">
                            @ViewBag.listaDeportistasPais[i].Nombre
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-5 columna">
                            @ViewBag.listaDeportistasPais[i].Nombre
                        </div>
                        <div class="col-7 columna">
                            @ViewBag.listaDeportistasPais[i + 1].Nombre
                        </div>
                    </div>
                }
                    
                if(i + 2 < repeticiones && i + 3 < repeticiones)
                {
                    <div class="row">
                        <div class="col-7 columna">
                            @ViewBag.listaDeportistasPais[i + 2].Nombre
                        </div>
                        <div class="col-5 columna">
                            @ViewBag.listaDeportistasPais[i + 3].Nombre
                        </div>
                    </div>
                }
                else if (i + 2 < repeticiones && i + 3 >= repeticiones)
                {
                    <div class="row">
                        <div class="col columna">
                            @ViewBag.listaDeportistasPais[i + 2].Nombre
                        </div>
                    </div>
                }
            }
        }
    </div>
</section>